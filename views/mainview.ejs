<%- include('common/header.ejs') %>
<%- include('header.ejs') %>
<%- include('nav.ejs') %>
<div class="content-wrapper">
  <section class="content-header">
    <h1>总览</h1>
  </section>
  <section class="content">
    <div class="row">
      <div class="col-md-10" id="app" v-cloak>
        <div class="box box-primary">
          <div class="box-body mainview">

            <div class="mainview-block block-color row">
              <div class="mainview-title-item col-md-3">
                <label class="">{{money}}</label>
                <p>营收总额<label class="detail" @click="showBillDetail">详情</label></p>
              </div>
              <div class="mainview-title-item col-md-3">
                <label class="wall">123</label>
                <p>上墙总数</p>
              </div>
              <div class="mainview-title-item col-md-3">
                <label class="screen">123</label>
                <p>霸屏总数</p>
              </div>
              <div class="mainview-title-item col-md-3">
                <label class="user">123</label>
                <p>用户总数</p>
              </div>
            </div>

            <div class="mainview-block block-color row">
              <div class="mainview-news item-color col-md-6">
                <div class="sub-title">
                  <p><label class="pull-left">九服动态</label>
                    <label class="pull-right detail" @click="showMoreNews">更多</label></p>
                </div>
                <div class="news-mini-list">
                </div>
              </div>
              <div class="mainview-feedback item-color col-md-6">
                <div class="sub-title">
                  <p><label class="pull-left">反馈建议</label></p>
                </div>
                <form action="" class="feed-back-form">
                  <textarea name="feedback" v-model="feedback" class="feedback form-control"
                            placeholder="请写下您对微喵的意见或建议"></textarea>
                  <div class="" style="margin-top: 5px;">
                    <button type="submit" class="btn btn-success pull-left" style="padding: 5px 20px;">提交</button>
                  </div>
                </form>
              </div>
            </div>

            <!--营收总额的详情对话框-->
            <div id="billdetailModel" class="modal fade" tabindex="-1" role="dialog">
              <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Modal title</h4>
                  </div>
                  <div class="modal-body">
                    <p>One fine body&hellip;</p>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                  </div>
                </div><!-- /.modal-content -->
              </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->

            <!--更多新闻的对话框-->
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
