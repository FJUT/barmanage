<%- include('common/header.ejs') %>
  <%- include('header.ejs') %>
  <div class="row">
    <%- include('nav.ejs') %>
    <div class="col-md-10" id="app" v-cloak>
      <form class="form-horizontal center-block" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label class="col-sm-2 control-label">名称</label>
          <div class="col-sm-10">
            <input type="text" name="name" class="form-control" placeholder="名称" v-model="name">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">LOGO</label>
          <div class="col-sm-2">
            <label class="btn btn-success btn-file">
              选择文件 <input type="file" class="hidden" name="logo" @change="handleLogoChange" accept="image/png, image/jpeg">
            </label>
          </div>
        </div>
        <div class="form-group" v-if="logo">
          <div class="col-sm-2"></div>
          <div class="col-sm-8">
            <div class="thumbnail pull-left img-with-close-btn">
              <img :src="logo" alt="酒吧图片" />
              <button type="button" class="close"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">照片</label>
          <div class="col-sm-2">
            <label class="btn btn-success btn-file">
              选择文件 <input type="file" class="hidden" name="photos" @change="handlePhotosChange" multiple="multiple" accept="image/png, image/jpeg">
            </label>
          </div>
        </div>
        <div class="form-group" v-if="photos.length > 0">
          <div class="col-sm-2"></div>
          <div class="col-sm-8">
            <div class="thumbnail pull-left img-with-close-btn" v-for="url in photos">
              <img :src="url" alt="酒吧图片" />
              <button type="button" class="close" @click="deletePhoto(url)"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">营业时间</label>
          <div class="col-sm-10">
            <el-time-select
              placeholder="起始时间"
              v-model="startTime"
              :picker-options="pickerOptions">
            </el-time-select>
            <el-time-select
              placeholder="结束时间"
              v-model="endTime"
              :picker-options="pickerOptions">
            </el-time-select>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">所在城市</label>
          <div class="col-sm-10">
            <input class="form-control" type="text" id="citySelect" placeholder="选择城市" v-model="city">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">详细地址</label>
          <div class="col-sm-10">
            <input class="form-control" type="text" name="address" placeholder="详细地址" v-model="address">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">简介</label>
          <div class="col-sm-10">
            <textarea name="summary" v-model="summary" class="form-control" placeholder="简介"></textarea>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-danger btn-lg" @click="save">保存</button>
          </div>
        </div>
      </form>
    </div>
  </div>
  <script>
  window.barInfo = <%-JSON.stringify(barInfo)%>
  </script>
