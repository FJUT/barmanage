<%- include('common/header.ejs') %>
<%- include('header.ejs') %>
<%- include('nav.ejs') %>
<script>
var messages = <%-JSON.stringify(messages)%>;
</script>
<div class="content-wrapper">
  <section class="content-header">
    <h1>内容管理</h1>
  </section>
  <section class="content">
    <div class="row">
      <div class="col-md-10">
        <div class="box">
          <div class="box-header with-border">
            <h3 class="box-title">消息列表</h3>
          </div>
          <!-- /.box-header -->
          <div class="box-body" id="app">
            <p class="text-info" v-if="messages.length == 0">暂无消息</p>
            <table class="table table-bordered" v-else>
              <tbody>
                <tr>
                  <th>消息ID</th>
                  <th>消息内容</th>
                  <th>消息图片</th>
                  <th>操作</th>
                </tr>
                <tr v-for="item in messages">
                  <td>{{item.id}}</td>
                  <td>{{item.msgText}}</td>
                  <td><img :src="item.msgImage" width="100" height="50"></td>
                  <td>
                    <button type="button" class="btn btn-sm btn-danger" @click="deleteById(item.id, index)">删除</button>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
          <!-- /.box-body -->
          <!--<div class="box-footer clearfix">
            <ul class="pagination pagination-sm no-margin pull-right">
              <li><a href="#">«</a></li>
              <li><a href="#">1</a></li>
              <li><a href="#">2</a></li>
              <li><a href="#">3</a></li>
              <li><a href="#">»</a></li>
            </ul>
          </div>-->
        </div>
      </div>
    </div>
  </section>
</div>
<script src="<%-url('init.js')%>"></script>
<script src="<%-url('message.bundle.js')%>"></script>
