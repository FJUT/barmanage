<%- include('common/header.ejs') %>
<%- include('header.ejs') %>
<%- include('nav.ejs') %>
<div class="content-wrapper">
  <section class="content-header">
    <h1>用户管理</h1>
  </section>
  <section class="content">
    <div class="row">
      <div class="col-md-10" id="app" v-cloak>
        <div class="box box-primary">
          <el-table :data="userCurShow" style="width: 100%;font-size:14px" @row-click="userClick">
            <el-table-column label="头像" width="60">
              <template scope="scope">
                <img :src="scope.row.avatar" style="width:32px; height:32px;">
              </template>
            </el-table-column>
            <el-table-column prop="name" label="昵称" width="100"></el-table-column>
            <el-table-column prop="openid" width="280" label="OpenID"></el-table-column>
            <el-table-column prop="gender" label="性别" :formatter="genderformatter"></el-table-column>
            <el-table-column prop="city" label="城市"></el-table-column>
            <el-table-column prop="phonenumber" label="手机号"></el-table-column>
            <el-table-column prop="note" label="备注"></el-table-column>
            <!--<el-table-column label="操作" class-name="" width="110">-->
              <!--<template scope="scope">-->
                <!--<el-button size="small" type="danger" @click="handleDelete(scope.$index, scope.row)">删除</el-button>-->
              <!--</template>-->
            <!--</el-table-column>-->
          </el-table>
          <div style="height: 34px;">
            <el-pagination :total="user.length" :page-size="userPerPageCount" @current-change="onUserPageChange"
                           style="position: absolute;right: 10px;" layout="prev, pager, next">
            </el-pagination>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
<script>
  window._jiufu_user = <%- JSON.stringify(users)%>
  window.error_message = "<%= err %>"
</script>
